{
  "name": "potacat",
  "version": "0.9.9",
  "description": "POTA activator lookup with FlexRadio CAT control",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-icon": "node scripts/build-icon.js",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "release": "node scripts/release.js"
  },
  "build": {
    "appId": "com.waffleslop.potacat",
    "productName": "POTACAT",
    "icon": "assets/icon.png",
    "files": [
      "main.js",
      "preload.js",
      "lib/**/*",
      "renderer/**/*",
      "assets/icon.png",
      "assets/cty.dat",
      "node_modules/leaflet/**/*",
      "node_modules/sql.js/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "POTACAT",
      "include": "build/installer.nsh"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    },
    "extraResources": [
      {
        "from": "assets/hamlib",
        "to": "hamlib",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "Waffleslop",
      "repo": "POTACAT"
    }
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^26.7.0",
    "sharp": "^0.34.5"
  },
  "dependencies": {
    "electron-updater": "^6.8.3",
    "leaflet": "^1.9.4",
    "serialport": "^13.0.0",
    "sql.js": "^1.14.0"
  }
}
